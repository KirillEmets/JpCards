<resources>
    <style name="AppThemeParent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#9b59b6</item>
        <item name="colorPrimaryDark">#6b2c86</item>
        <item name="colorAccent">#03DAC5</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorMainText">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="AppTheme" parent="AppThemeParent">
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="colorButtonMiss">#c0392b</item>
        <item name="colorButtonHard">#e74c3c</item>
        <item name="colorButtonEasy">#27ae60</item>
    </style>

    <style name="ReviewButtonParent" parent="Widget.MaterialComponents.Button"/>

    <style name="ReviewButton" parent="ReviewButtonParent">
        <item name="android:layout_height">@dimen/answer_button_height</item>
        <item name="android:textSize">@dimen/Buttons_text_size</item>
    </style>

    <style name="ReviewButton.Miss" parent="ReviewButton">
        <item name="backgroundTint">?attr/colorButtonMiss</item>
    </style>
    <style name="ReviewButton.Hard" parent="ReviewButton">
        <item name="backgroundTint">?attr/colorButtonHard</item>
    </style>
    <style name="ReviewButton.Easy" parent="ReviewButton">
        <item name="backgroundTint">?attr/colorButtonEasy</item>
    </style>

    <style name="IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>