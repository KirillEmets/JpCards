<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.kirillemets.flashcards.review.ReviewFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".review.ReviewFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.4"
            tools:visibility="gone">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="@{viewModel.buttonReviewClickable}"
                android:focusable="@{viewModel.buttonReviewClickable}"
                android:onClick="@{() -> viewModel.onButtonReviewClick()}"
                android:text="@string/btn_review"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/countOfCardsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/button_start_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="You currently have 114 words to review" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reviewLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.6"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/word_frame_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@android:drawable/gallery_thumb"
                android:backgroundTint="@color/review_border"
                android:orientation="vertical"
                android:padding="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15">

                <TextView
                    android:id="@+id/word_reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@{viewModel.currentCard.wordReading}"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:visibility="@{viewModel.wordReadingVisibility}"
                    tools:text="Word reading" />

                <TextView
                    android:id="@+id/word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@{viewModel.currentCard.word}"
                    android:textAlignment="center"
                    android:textColor="@color/words_in_review"
                    android:textSize="30sp"
                    tools:text="Word" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word_frame_layout"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/answer_frame_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:drawable/gallery_thumb"
                    android:backgroundTint="@color/review_border"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.25">

                    <TextView
                        android:id="@+id/answer_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{viewModel.currentCard.answerReading}"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:visibility="@{viewModel.answerReadingVisibility}"
                        tools:text="Answer reading" />

                    <TextView
                        android:id="@+id/answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{viewModel.currentCard.answer}"
                        android:textAlignment="center"
                        android:textColor="@color/words_in_review"
                        android:textSize="30sp"
                        tools:text="Answer" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_miss"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/answer_button_height"
                    android:layout_marginStart="8dp"
                    android:onClick="@{() -> viewModel.onButtonAnswerClick(0)}"
                    android:text="@string/miss"
                    android:textSize="@dimen/Buttons_text_size"
                    app:backgroundTint="@color/button_miss"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintHorizontal_weight="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answer_frame_layout"
                    app:layout_constraintVertical_bias="0.7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_hard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{() -> viewModel.onButtonAnswerClick(2)}"
                    android:text="@string/hard"
                    android:textSize="@dimen/Buttons_text_size"
                    app:backgroundTint="@color/button_hard"
                    app:layout_constraintBottom_toBottomOf="@+id/button_miss"
                    app:layout_constraintEnd_toStartOf="@+id/button_easy"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toEndOf="@+id/button_miss"
                    app:layout_constraintTop_toTopOf="@+id/button_miss" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_easy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{() -> viewModel.onButtonAnswerClick(1)}"
                    android:text="@string/easy"
                    android:textSize="@dimen/Buttons_text_size"
                    app:backgroundTint="@color/button_easy"
                    app:layout_constraintBottom_toBottomOf="@+id/button_miss"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toEndOf="@+id/button_hard"
                    app:layout_constraintTop_toTopOf="@+id/button_miss" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/incorrect"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/button_miss"
                    app:layout_constraintEnd_toEndOf="@+id/button_miss"
                    app:layout_constraintStart_toStartOf="@+id/button_miss" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correct"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="@+id/button_easy"
                    app:layout_constraintStart_toStartOf="@+id/button_hard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/discard"
                    app:layout_constraintEnd_toEndOf="@+id/button_miss"
                    app:layout_constraintStart_toStartOf="@+id/button_miss"
                    app:layout_constraintTop_toBottomOf="@+id/button_miss" />

                <TextView
                    android:id="@+id/hard_button_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{}"
                    app:layout_constraintEnd_toEndOf="@+id/button_hard"
                    app:layout_constraintStart_toStartOf="@+id/button_hard"
                    app:layout_constraintTop_toBottomOf="@+id/button_hard"
                    tools:text="+1 day" />

                <TextView
                    android:id="@+id/easy_button_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="@+id/button_easy"
                    app:layout_constraintStart_toStartOf="@+id/button_easy"
                    app:layout_constraintTop_toBottomOf="@+id/button_easy"
                    tools:text="+4 days" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_show_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.onButtonShowAnswerClick()}"
                android:text="@string/show_answer_button"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.88"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>