<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.kirillemets.flashcards.review.ReviewFragmentViewModel" />
        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".review.ReviewFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.4"
            android:visibility="@{viewModel.reviewStarted ? View.GONE : View.VISIBLE}"
            tools:visibility="gone">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="@{viewModel.buttonReviewClickable}"
                android:focusable="@{viewModel.buttonReviewClickable}"
                android:onClick="@{() -> viewModel.onButtonReviewClick()}"
                android:text="@string/btn_review"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/countOfCardsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/button_start_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="You currently have 114 words to review" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reviewLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{viewModel.reviewStarted ? View.VISIBLE : View.GONE}"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_weight="0.6"
            tools:visibility="visible">

            <RelativeLayout
                android:id="@+id/word_frame_layout"
                android:visibility="@{viewModel.reviewStarted ? View.VISIBLE : View.GONE}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/gallery_thumb"
                android:backgroundTint="@color/review_border"
                android:padding="16dp"
                app:layout_constraintBottom_toTopOf="@+id/answer_frame_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_counter"
                app:layout_constraintVertical_chainStyle="spread">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/word_reading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.currentCard.wordReading}"
                            android:textAlignment="center"
                            android:textSize="@{viewModel.fontSizeSmall}"
                            tools:textSize="18sp"
                            android:visibility='@{(viewModel.answerShown &amp;&amp; !viewModel.currentCard.wordReading.empty) ? View.VISIBLE : View.GONE}'
                            tools:text="Word reading" />

                        <TextView
                            android:id="@+id/word"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.currentCard.word}"
                            android:textAlignment="center"
                            android:textColor="@color/words_in_review"
                            android:textSize="@{viewModel.fontSizeBig}"
                            tools:textSize="30sp"
                            tools:text="Word" />
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/answer_frame_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/gallery_thumb"
                android:backgroundTint="@color/review_border"
                android:padding="16dp"
                android:visibility="@{(viewModel.reviewStarted &amp;&amp; viewModel.answerShown) ? View.VISIBLE : View.INVISIBLE}"
                tools:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/answer_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word_frame_layout"
                app:layout_constraintVertical_chainStyle="spread">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    tools:ignore="UselessParent">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/answer_reading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.currentCard.answerReading}"
                            android:textAlignment="center"
                            android:textSize="@{viewModel.fontSizeSmall}"
                            tools:textSize="18sp"
                            android:visibility='@{!viewModel.currentCard.answerReading.empty ? View.VISIBLE : View.GONE}'
                            tools:text="Answer reading" />

                        <TextView
                            android:id="@+id/answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.currentCard.answer}"
                            android:textAlignment="center"
                            android:textColor="@color/words_in_review"
                            android:textSize="@{viewModel.fontSizeBig}"
                            tools:textSize="30sp"
                            tools:text="Answer" />
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="@{(viewModel.reviewStarted &amp;&amp; viewModel.answerShown) ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_miss"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/answer_button_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="48dp"
                    android:onClick="@{() -> viewModel.onButtonAnswerClick(0)}"
                    android:text="@string/miss"
                    android:textSize="@dimen/Buttons_text_size"
                    app:backgroundTint="@color/button_miss"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintHorizontal_weight="0.4"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_hard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{() -> viewModel.onButtonAnswerClick(2)}"
                    android:text="@string/hard"
                    android:textSize="@dimen/Buttons_text_size"
                    app:backgroundTint="@color/button_hard"
                    app:layout_constraintBottom_toBottomOf="@+id/button_miss"
                    app:layout_constraintEnd_toStartOf="@+id/button_easy"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toEndOf="@+id/button_miss"
                    app:layout_constraintTop_toTopOf="@+id/button_miss" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_easy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{() -> viewModel.onButtonAnswerClick(1)}"
                    android:text="@string/easy"
                    android:textSize="@dimen/Buttons_text_size"
                    app:backgroundTint="@color/button_easy"
                    app:layout_constraintBottom_toBottomOf="@+id/button_miss"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toEndOf="@+id/button_hard"
                    app:layout_constraintTop_toTopOf="@+id/button_miss" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/incorrect"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_miss"
                    app:layout_constraintEnd_toEndOf="@+id/button_miss"
                    app:layout_constraintStart_toStartOf="@+id/button_miss" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:maxLines="2"
                    android:minLines="1"
                    android:text="@string/correct"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="@+id/button_easy"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/button_hard"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/discard"
                    app:layout_constraintEnd_toEndOf="@+id/button_miss"
                    app:layout_constraintStart_toStartOf="@+id/button_miss"
                    app:layout_constraintTop_toBottomOf="@+id/button_miss" />

                <TextView
                    android:id="@+id/hard_button_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{}"
                    app:layout_constraintEnd_toEndOf="@+id/button_hard"
                    app:layout_constraintStart_toStartOf="@+id/button_hard"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    tools:text="+1 day" />

                <TextView
                    android:id="@+id/easy_button_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="@+id/button_easy"
                    app:layout_constraintStart_toStartOf="@+id/button_easy"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    tools:text="+4 days" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_show_answer"
                android:visibility="@{(viewModel.reviewStarted &amp;&amp; !viewModel.answerShown) ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.onButtonShowAnswerClick()}"
                android:text="@string/show_answer_button"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.88"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/text_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{viewModel.counterText}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text = "122 / 357"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>